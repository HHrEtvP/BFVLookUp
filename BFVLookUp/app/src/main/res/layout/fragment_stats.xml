<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/transparent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:background="#99000000"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/onetime_title_combat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Combat"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal"
            android:textSize="20sp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#88FFFFFF" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/stats_combat_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/onetime_title_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal"
            android:textSize="20sp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#88FFFFFF" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/stats_team_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/onetime_title_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Round"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal"
            android:textSize="20sp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#88FFFFFF" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/stats_round_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/onetime_title_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal"
            android:textSize="20sp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#88FFFFFF" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/stats_score_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>